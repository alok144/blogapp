<%- include('partials/header'); -%>

<div class="ui main text container">
    <div class="ui huge header">Top Tourist Places</div>
    <div class="ui top attached segement">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" >
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,100) %>....</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                show more
                                <i class="angle right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>            
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>